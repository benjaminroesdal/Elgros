@page "/SingleProduct"
@using ElgrosWeb.Client.Services;
@inject NavigationManager NavManager
@inject ISnackbar Snackbar
@inject Blazored.LocalStorage.ILocalStorageService localStore
@inject NavigationManager NavManager
@inject StateContainer stateContainer
@inject ProductService ProductService


<MudContainer MaxWidth="MaxWidth.Large">
<MudGrid>
    <MudItem md="12" sm="12">
        <MudText Typo="Typo.h3">@product.Name</MudText>
    </MudItem>
    <MudItem lg="4" md="6" sm="12">
        <img width="300" src="@product.Image" alt="@product.Name" />
    </MudItem>
    <MudItem lg="4" md="6" sm="12">
        <MudPaper Class="pa-4">
                    <MudText Typo="Typo.h4" Class="mb-4">Pris: @product.Price kr</MudText>
            <MudText Typo="Typo.body1">
                <strong>Produkt beskrivelse:</strong> @product.Description
            </MudText>
            <MudText Typo="Typo.body1" Class="mb-4"><strong>Brand: </strong>@product.Brand</MudText>
            <MudText Typo="Typo.body1" Class="mb-4"><strong>På lager: </strong>@product.StockQuantity</MudText>
            <MudIconButton Class="mt-4" Icon="@Icons.Material.Filled.ShoppingBag" OnClick="@(() => AddToBasket(product))" Color="Color.Primary" />
        </MudPaper>
    </MudItem>
</MudGrid>
</MudContainer>
